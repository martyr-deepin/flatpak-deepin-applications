#!/bin/sh
flatpak install --system --bundle  /usr/share/deepin-flatpak/app/com.deepin.ScreenRecorder/x86_64/master/bundle
rm /usr/share/deepin-flatpak/app/com.deepin.ScreenRecorder/x86_64/master/bundle
flatpak run -v --command=fc-cache com.deepin.ScreenRecorder -v
for f in `ls -d /home/*/`;
	do
		mkdir -p $f/.var/app/com.deepin.ScreenRecorder/cache/;
		USER=`echo $f|cut -d '/' -f 3`;
		cp -rf /root/.var/app/com.deepin.ScreenRecorder/cache/fontconfig/ $f.var/app/com.deepin.ScreenRecorder/cache/
		chown -R $USER:$USER $f/.var/
done

exit 0
